@model LAMBusiness.Shared.Contacto.Colaborador

@{
    ViewData["Title"] = "Colaboradores";
}

<div class="modal-content border-0 box-shadow">
    <div class="modal-header pb-0 align-items-baseline">
        <div>
            <h3 class="modal-title" id="exampleModalLabel">Colaboradores</h3>
            <ul class="breadcrumb bg-transparent p-0 small">
                <li class="breadcrumb-item"><a asp-action="Contacto" asp-controller="Menu">Contactos</a></li>
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Colaboradores">Colaboradores</a></li>
                <li class="breadcrumb-item active">Detalle</li>
            </ul>
        </div>
        <a asp-action="Index" asp-controller="Colaboradores" class="btn-close me-md-1" aria-label="Close"></a>
    </div>
    <div class="modal-body py-4">
        <div class="row px-md-3">
            <div class="card-lam-d1 col-12">
                <div class="card-header-lam-d1">
                    <div>
                        <p class="fw-bold m-0 pt-2 pt-md-0 title">
                            @Html.DisplayFor(model => model.Nombre)
                            @Html.DisplayFor(model => model.PrimerApellido)
                            @Html.DisplayFor(model => model.SegundoApellido)
                        </p>
                        <span class="d-block subtitle text-muted">
                            @Html.DisplayFor(model => model.Domicilio),
                            @Html.DisplayFor(model => model.Colonia)&nbsp;
                            @Html.DisplayFor(model => model.CodigoPostal).
                        </span>
                        <span class="d-block mb-3 subtitle text-muted">
                            @Html.DisplayFor(model => model.Municipios.MunicipioDescripcion),
                            @Html.DisplayFor(model => model.Municipios.Estados.EstadoDescripcion).
                        </span>
                        @if (Convert.ToBoolean(ViewBag.PermisoEscritura))
                        {
                            <a asp-action="Edit" asp-route-id="@Model.ColaboradorID" class="btn btn-base btn-sm rounded">Editar</a>
                        }
                        <a asp-action="Index" class="btn btn-sm btn-outline-secondary border">Regresar</a>
                    </div>
                </div>
                <div class="card-body-lam-d1 mt-2">
                    <div class="row g-0 row-bordered border">
                        <!--CURP-->
                        <div class="bg-row d-flex col-lg-4 col-lg align-items-center">
                            <div class="card-body d-flex align-items-center">
                                <i class="fas fa-user-tag display-4 text-secondary"></i>
                                <div class="ms-3">
                                    <div class="text-muted small">@Html.DisplayNameFor(model => model.CURP)</div>
                                    <h5>@Html.DisplayFor(model => model.CURP)</h5>
                                </div>
                            </div>
                        </div>
                        <!--Puesto-->
                        <div class="bg-row d-flex col-lg-4 col-lg align-items-center">
                            <div class="card-body d-flex align-items-center">
                                <i class="fas fa-user-tag display-4 text-secondary"></i>
                                <div class="ms-3">
                                    <div class="text-muted small line-height-1">@Html.DisplayNameFor(model => model.Puestos.PuestoNombre)</div>
                                    <h5>@Html.DisplayFor(model => model.Puestos.PuestoNombre)</h5>
                                </div>
                            </div>
                        </div>
                        <!--Estado civil-->
                        <div class="bg-row d-flex col-lg-4 col-lg align-items-center">
                            <div class="card-body d-flex align-items-center">
                                <i class="fas fa-user-tag display-4 text-secondary"></i>
                                <div class="ms-3">
                                    <div class="text-muted small line-height-1">@Html.DisplayNameFor(model => model.EstadosCiviles.EstadoCivilDescripcion)</div>
                                    <h5>@Html.DisplayFor(model => model.EstadosCiviles.EstadoCivilDescripcion)</h5>
                                </div>
                            </div>
                        </div>
                        <!--Teléfono fijo-->
                        <div class="bg-row d-flex col-lg-4 col-lg align-items-center">
                            <div class="card-body d-flex align-items-center">
                                <i class="fas fa-phone display-4 text-secondary"></i>
                                <div class="ms-3">
                                    <div class="text-muted small line-height-1">@Html.DisplayNameFor(model => model.Telefono)</div>
                                    <h5><a href="tel:@Html.DisplayFor(model => model.Telefono)">@Html.DisplayFor(model => model.Telefono)</a></h5>
                                </div>
                            </div>
                        </div>
                        <!--Teléfono móvil-->
                        <div class="bg-row d-flex col-lg-4 col-lg align-items-center">
                            <div class="card-body d-flex align-items-center">
                                <i class="fas fa-mobile-alt display-4 text-secondary"></i>
                                <div class="ms-3">
                                    <div class="text-muted small line-height-1">@Html.DisplayNameFor(model => model.TelefonoMovil)</div>
                                    <h5><a href="tel:@Html.DisplayFor(model => model.TelefonoMovil)">@Html.DisplayFor(model => model.TelefonoMovil)</a></h5>
                                </div>
                            </div>
                        </div>
                        <!--Estatus-->
                        <div class="bg-row d-flex col-lg-4 col-lg align-items-center">
                            <div class="card-body d-flex align-items-center">
                                @if (Model.Activo)
                                {
                                    <i class="far fa-check-circle display-4 text-success"></i>
                                    <div class="ms-3">
                                        <div class="text-muted small line-height-1">Estatus</div>
                                        <h5 class="text-success">Disponible</h5>
                                    </div>
                                }
                                else
                                {
                                    <i class="fas fa-ban display-4 text-danger"></i>
                                    <div class="ms-4">
                                        <div class="text-muted small line-height-1">Estatus</div>
                                        <h5 class="text-danger">No Disponible</h5>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="row g-0 row-bordered border border-top-0">
                        <div class="bg-row d-flex col-lg-6 col-lg align-items-center">
                            <div class="card-body d-flex align-items-center">
                                <i class="fas fa-calendar display-4 text-secondary"></i>
                                <div class="ms-3">
                                    <div class="text-muted small line-height-1">@Html.DisplayNameFor(model => model.FechaRegistro)</div>
                                    <h5>
                                        @Model.FechaRegistro.ToString("dd MMMM, yyyy")
                                        <small class="text-muted ms-1">@Model.FechaRegistro.ToString("HH:mm")</small>
                                    </h5>
                                </div>
                            </div>
                        </div>
                        <div class="bg-row d-flex col-lg-6 col-lg align-items-center">
                            <div class="card-body d-flex align-items-center">
                                <i class="fas fa-calendar display-4 text-secondary"></i>
                                <div class="ms-3">
                                    <div class="text-muted small line-height-1">@Html.DisplayNameFor(model => model.FechaActualizacion)</div>
                                    <h5>
                                        @Model.FechaActualizacion.ToString("dd MMMM, yyyy")
                                        <small class="text-muted ms-1">@Model.FechaActualizacion.ToString("HH:mm")</small>
                                    </h5>
                                </div>
                            </div>
                        </div>
                        <div class="bg-row d-flex col-lg-6 col-lg align-items-center">
                            <div class="card-body d-flex align-items-center">
                                <i class="fas fa-envelope display-4 text-secondary"></i>
                                <div class="ms-3">
                                    <div class="text-muted small line-height-1">@Html.DisplayNameFor(model => model.Email)</div>
                                    <h5 class="text-break">@Html.DisplayFor(model => model.Email)</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>