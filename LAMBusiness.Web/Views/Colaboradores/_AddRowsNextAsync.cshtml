@model IEnumerable<LAMBusiness.Shared.Contacto.Colaborador>

@if (Model.Any())
{
    @foreach (var item in Model)
    {
        <div class="col-12 border-bottom">
            <div class="row">
                <div class="col-12 col-md-8">
                    <div class="row no-gutters align-items-center">
                        <div class="col-2 col-lg-1 px-0 text-center">
                            <img class="rounded-circle" style="width:3rem;" src="@Url.Action("GetProfilePicture", "Sesion", new { id = item.ColaboradorID, tipo = "profile" })" />
                        </div>
                        <div class="col p-3">
                            <span class="font-weight-bold text-dark">
                                @Html.DisplayFor(modelItem => item.Nombre)
                                @Html.DisplayFor(modelItem => item.PrimerApellido)
                                @Html.DisplayFor(modelItem => item.SegundoApellido)
                            </span>
                            <div class="d-none d-lg-block">
                                <small class="d-block text-muted">@Html.DisplayFor(modelItem => item.CURP)</small>
                                <small class="d-block text-muted">
                                    @Html.DisplayFor(modelItem => item.Domicilio),
                                    @Html.DisplayFor(modelItem => item.Colonia)&nbsp;
                                    @Html.DisplayFor(modelItem => item.CodigoPostal),
                                    @Html.DisplayFor(modelItem => item.Municipios.MunicipioDescripcion),
                                    @Html.DisplayFor(modelItem => item.Municipios.Estados.EstadoDescripcion)
                                </small>
                                @if (!item.Activo)
                                {
                                    <small class="badge border border-danger text-danger font-weight-normal">No Disponible</small>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 px-3 py-2 text-right">
                    <div class="d-none d-lg-block">
                        @if (!string.IsNullOrEmpty(item.Telefono))
                        {
                            <small class="d-block font-weight-normal text-muted text-left text-md-right"><i class="fa fa-phone mr-2"></i><a href="tel:@Html.DisplayFor(modelItem => item.Telefono)">@Html.DisplayFor(modelItem => item.Telefono)</a></small>
                        }
                        @if (!string.IsNullOrEmpty(item.TelefonoMovil))
                        {
                            <small class="d-block font-weight-normal text-muted text-left text-md-right"><i class="fa fa-mobile-alt mr-2"></i><a href="tel:@Html.DisplayFor(modelItem => item.TelefonoMovil)">@Html.DisplayFor(modelItem => item.TelefonoMovil)</a></small>
                        }
                        <small class="d-block font-weight-normal text-muted text-left text-md-right"><i class="fa fa-envelope mr-2"></i>@Html.DisplayFor(modelItem => item.Email)</small>
                        <small class="d-block font-weight-normal text-muted text-left text-md-right" title="Fecha de registro"><i class="fa fa-calendar mr-2"></i>@item.FechaRegistro.ToString("dd MMMM, yyyy")</small>
                    </div>
                    <div class="mt-md-2">
                        <a asp-action="Details" asp-route-id="@item.ColaboradorID" class="d-inline-block text-decoration-none">
                            <div class="btn-icon rounded-circle" data-toggle="tooltip" data-trigger="hover" data-placement="bottom" data-original-title="ver detalle">
                                <i class="fa fa-file-alt"></i>
                            </div>
                        </a>
                        @if (Convert.ToBoolean(ViewBag.PermisoEscritura))
                        {
                            <a asp-action="Edit" asp-route-id="@item.ColaboradorID" class="d-inline-block text-decoration-none">
                                <div class="btn-icon rounded-circle" data-toggle="tooltip" data-trigger="hover" data-placement="bottom" data-original-title="editar registro">
                                    <i class="fa fa-edit"></i>
                                </div>
                            </a>
                            <a href="#" data-id="@item.ColaboradorID" class="d-inline-block deleteConfirm text-decoration-none" data-toggle="modal" data-target="#deleteConfirm">
                                <div class="btn-icon rounded-circle" data-toggle="tooltip" data-trigger="hover" data-placement="bottom" data-original-title="eliminar registro">
                                    <i class="fa fa-trash"></i>
                                </div>
                            </a>
                        }
                    </div>
                </div>
            </div>

        </div>
    }
}