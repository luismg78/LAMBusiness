@model LAMBusiness.Shared.Aplicacion.Filtro<List<LAMBusiness.Shared.Catalogo.FormaPago>>

@if (Model != null)
{
    <div id="dRows" data-charging="0" data-rows-next="1">
        @if (Model.Skip == 0)
        {
            <div class="row px-md-3">
                <div class="border-bottom col-8 p-3">
                    <div class="fw-bold text-uppercase">FORMAS DE PAGO</div>
                </div>
                <small class="border-bottom col-4 p-3 text-muted text-end">
                    @Model.Registros.ToString("#,###,##0") Registro(s).
                </small>
            </div>
        }
        <div class="px-md-3">
            @foreach (var item in Model.Datos)
            {
                <div class="row bg-row">
                    <div class="border-bottom col-10 col-md-9 p-3">
                        <span class="text-dark d-block">@Html.DisplayFor(modelItem => item.FormaPagoDescripcion)</span>
                        @if (item.FormaPagoDefault)
                        {
                            <span class="badge bg-info text-white">Predeterminada</span>
                        }
                    </div>
                    <div class="border-bottom col-2 col-md-3 p-3 text-end">
                        @if (Model.PermisoEscritura)
                        {
                            <a asp-action="Edit" asp-route-id="@item.FormaPagoID" class="d-block d-md-inline text-decoration-none">
                                <div class="btn-icon rounded-circle" data-bs-toggle="tooltip" data-bs-trigger="hover" data-bs-placement="bottom" title="editar registro">
                                    <i class="fa fa-edit"></i>
                                </div>
                            </a>
                            <a href="#" data-id="@item.FormaPagoID" class="d-block d-md-inline deleteConfirm text-decoration-none" data-bs-toggle="modal" data-bs-target="#deleteConfirm">
                                <div class="btn-icon rounded-circle" data-bs-toggle="tooltip" data-bs-trigger="hover" data-bs-placement="bottom" title="eliminar registro">
                                    <i class="fa fa-trash"></i>
                                </div>
                            </a>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
}