@model LAMBusiness.Shared.Catalogo.FormaPago

@{
    ViewData["Title"] = "Formas de Pago";
}

<form asp-action="Edit">
    <div class="modal-content border-0 box-shadow box-responsive m-auto">
        <div class="modal-header pb-0 align-items-baseline">
            <div>
                <h3 class="modal-title" id="exampleModalLabel">Formas de Pago</h3>
                <ul class="breadcrumb bg-transparent p-0 small">
                    <li class="breadcrumb-item"><a asp-action="Catalogo" asp-controller="Home">Catálogos</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="FormasPago">Formas de Pago</a></li>
                    <li class="breadcrumb-item active">Editar Registro</li>
                </ul>
            </div>
            <div class="d-flex align-items-center">
                <a class="btn-help text-secondary me-3" href="/" onclick="help('ViewEdit', event);">
                    <i class="fa fa-question-circle"></i>
                </a>
                <a asp-action="Index" asp-controller="FormasPago" class="btn-close me-md-1" aria-label="Close"></a>
            </div>
        </div>
        <div class="modal-body py-4">
            <div class="row px-md-3">
                <div class="col">
                    <input type="hidden" asp-for="FormaPagoID" />
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label required"></label>
                        <input asp-for="Nombre" class="form-control" autofocus/>
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ValorPorDefault" class="control-label"></label>
                        <small class="text-muted fst-italic d-block mb-3">(marque la casilla si desea dejar como predeterminada esta forma de pago)</small>
                        <input asp-for="ValorPorDefault" class="d-block"/>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer justify-content-between">
            <div class="px-md-3">
                <input type="submit" value="Actualizar" class="btn btn-base" />
                <a asp-action="Index" class="btn btn-outline-secondary">Regresar</a>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>
    </div>
</form>

<script src="~/js/FormasDePago.js" - version="true"></script>
