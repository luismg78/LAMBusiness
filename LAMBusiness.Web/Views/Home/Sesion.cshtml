@{
    ViewData["Title"] = "Sesión";
}

<div class="pb-0">
    <div>
        <h3 class="modal-title" id="exampleModalLabel">Sesión</h3>
        <ul class="breadcrumb bg-transparent p-0 small">
            <li class="breadcrumb-item">Menú</li>
            <li class="breadcrumb-item active">Sesión</li>
        </ul>
    </div>
</div>
<div class="modal-body py-4">
    <div class="row">
        <!--Cambiar contraseña-->
        <div class="btn-lam col-xl-4 col-md-6">
            <a asp-action="ChangePassword" asp-controller="Sesion" class="text-decoration-none">
                <div class="card mb-4 text-dark">
                    <div class="card-body bg-card text-center py-5">
                        <i class="fas fa-user-lock display-4 text-warning"></i>
                        <h4 class="mt-4">Contraseña</h4>
                        <p class="mb-3">Cambiar contraseña de usuario</p>
                    </div>
                </div>
            </a>
        </div>

        <!--Foto de perfil-->
        <div class="btn-lam col-xl-4 col-md-6">
            <a asp-action="ChangeProfilePicture" asp-controller="Sesion" class="text-decoration-none">
                <div class="card mb-4 text-dark">
                    <div class="card-body bg-card text-center py-3">
                        <img src="@Url.Action("GetProfilePicture", "Sesion", new { id = ViewBag.Id, tipo = "median" })" class="rounded-circle mt-3" style="width:6.5rem;" alt="Image Profile" />
                        <h4 class="mt-4">Imagen de perfil</h4>
                        <p class="mb-3">Cambiar imagen de perfil</p>
                    </div>
                </div>
            </a>
        </div>

        <!--Cerrar Aplicación-->
        <div class="btn-lam col-xl-4 col-md-6">
            <a asp-action="CerrarAplicacion" asp-controller="Sesion" class="text-decoration-none">
                <div class="card mb-4 text-dark">
                    <div class="card-body bg-card text-center py-5">
                        <i class="fas fa-sign-out-alt display-4 text-danger"></i>
                        <h4 class="mt-4">Salir</h4>
                        <p class="mb-3">Cerrar aplicación</p>
                    </div>
                </div>
            </a>
        </div>

        <!--Devoluciones-->
        @*<div class="btn-lam col-xl-4 col-md-6">
            <a asp-action="PaginaEnConstruccion" asp-controller="Home" class="text-decoration-none">
                <div class="card mb-4 text-dark">
                    <div class="card-body bg-card text-center py-5">
                        <i class="fas fa-retweet display-4 text-warning"></i>
                        <h4 class="mt-4"><span class="text-warning">@Model.Devoluciones</span> Devoluciones</h4>
                        <p class="mb-3">Devoluciones de productos</p>
                    </div>
                </div>
            </a>
        </div>*@
    </div>
</div>