@model LAMBusiness.Shared.Dashboard.Contacto

@{
    ViewData["Title"] = "Contacto";
}

<div class="pb-0">
    <div>
        <h3 class="modal-title" id="exampleModalLabel">Contactos</h3>
        <ul class="breadcrumb bg-transparent p-0 small">
            <li class="breadcrumb-item">Menú</li>
            <li class="breadcrumb-item active">Contacto</li>
        </ul>
    </div>
</div>
<div class="modal-body py-4">
    <div class="row">

        <!--Usuarios-->
        @if (Model.ModulosMenu.Contains(Guid.Parse("0C36B7F4-02DF-459A-9606-CAEEB137D9B1")))
        {
            <div class="btn-lam col-xl-4 col-md-6">
                <a asp-action="Index" asp-controller="Usuarios" class="text-decoration-none">
                    <div class="card mb-4 text-dark">
                        <div class="card-body bg-card text-center py-5">
                            <i class="fas fa-user display-4 text-primary mb-3"></i>
                            <h4 class="mb-0">Usuarios</h4>
                            <p class="mb-2">Catálogo de usuarios del sistema</p>
                            <span class="badge bg-light border text-dark fw-normal">@Model.Usuarios registro(s)</span>
                        </div>
                    </div>
                </a>
            </div>
        }

        <!--Datos Personales-->
        @if (Model.ModulosMenu.Contains(Guid.Parse("F2839E65-FC0F-4E75-894C-85259A583E13")))
        {
            <div class="btn-lam col-xl-4 col-md-6">
                <a asp-action="Index" asp-controller="Colaboradores" class="text-decoration-none">
                    <div class="card mb-4 text-dark">
                        <div class="card-body bg-card text-center py-5">
                            <i class="fas fa-users-cog display-4 text-base mb-3"></i>
                            <h4 class="mb-0">Colaboradores</h4>
                            <p class="mb-2">Catálogo de colaboradores</p>
                            <span class="badge bg-light border text-dark fw-normal">@Model.Colaboradores registro(s)</span>
                        </div>
                    </div>
                </a>
            </div>
        }

        <!--Clientes-->
        @if (Model.ModulosMenu.Contains(Guid.Parse("9B4E6E0C-6F34-4513-AACF-4A9A516CEDF6")))
        {
            <div class="btn-lam col-xl-4 col-md-6">
                <a asp-action="Index" asp-controller="Clientes" class="text-decoration-none">
                    <div class="card mb-4 text-dark">
                        <div class="card-body bg-card text-center py-5">
                            <i class="fas fa-user-friends display-4 text-info mb-3"></i>
                            <h4 class="mb-0">Clientes</h4>
                            <p class="mb-2">Catálogos de clientes</p>
                            <span class="badge bg-light border text-dark fw-normal">@Model.Clientes registro(s)</span>
                        </div>
                    </div>
                </a>
            </div>
        }

        <!--Proveedores-->
        @if (Model.ModulosMenu.Contains(Guid.Parse("76BE358D-AA92-48E2-AB1A-5EE557441067")))
        {
            <div class="btn-lam col-xl-4 col-md-6">
                <a asp-action="Index" asp-controller="Proveedores" class="text-decoration-none">
                    <div class="card mb-4 text-dark">
                        <div class="card-body bg-card text-center py-5">
                            <i class="fas fa-people-carry display-4 text-success mb-3"></i>
                            <h4 class="mb-0">Proveedores</h4>
                            <p class="mb-2">Catálogo de productos</p>
                            <span class="badge bg-light border text-dark fw-normal">@Model.Proveedores registro(s)</span>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>