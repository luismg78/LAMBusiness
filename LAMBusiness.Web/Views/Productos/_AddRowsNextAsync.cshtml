@model IEnumerable<LAMBusiness.Shared.Catalogo.Producto>

@if (Model.Any())
{
    @foreach (var item in Model.Take(50))
    {
        <div class="border-bottom col-10 col-md-9 px-3 py-2">
            <span class="text-dark">@Html.DisplayFor(modelItem => item.ProductoNombre)</span>
            <div class="d-block">
                <small class="text-muted">Código: @Html.DisplayFor(modelItem => item.Codigo)</small>
                @if (item.Paquete == null)
                {
                    <small class="badge badge-light border">Pieza</small>
                }
                else
                {
                    <small class="badge badge-secondary">Caja</small>
                }
                @if (!item.Activo)
                {
                    <small class="badge badge-danger">No Disponible</small>
                }
            </div>
            <small class="d-block text-muted">@Html.DisplayFor(modelItem => item.ProductoDescripcion)</small>
        </div>
        <div class="border-bottom col-2 col-md-3 px-3 py-2 text-right">
            <a asp-action="Details" asp-route-id="@item.ProductoID" class="d-block d-md-inline text-decoration-none">
                <div class="btn-icon rounded-circle" data-toggle="tooltip" data-trigger="hover" data-placement="bottom" data-original-title="ver detalle">
                    <i class="fa fa-file-alt"></i>
                </div>
            </a>
            <a asp-action="Edit" asp-route-id="@item.ProductoID" class="d-block d-md-inline text-decoration-none">
                <div class="btn-icon rounded-circle" data-toggle="tooltip" data-trigger="hover" data-placement="bottom" data-original-title="editar registro">
                    <i class="fa fa-edit"></i>
                </div>
            </a>
            <a href="#" data-id="@item.ProductoID" class="d-block d-md-inline deleteConfirm text-decoration-none" data-toggle="modal" data-target="#deleteConfirm">
                <div class="btn-icon rounded-circle" data-toggle="tooltip" data-trigger="hover" data-placement="bottom" data-original-title="eliminar registro">
                    <i class="fa fa-trash"></i>
                </div>
            </a>
        </div>
    }
}