@model LAMBusiness.Shared.Dashboard.Contacto

@{
    ViewData["Title"] = "Contacto";
}

<div class="pb-0">
    <div>
        <h3 class="modal-title" id="exampleModalLabel">Contactos</h3>
        <ul class="breadcrumb bg-transparent p-0 small">
            <li class="breadcrumb-item">Menú</li>
            <li class="breadcrumb-item active">Contacto</li>
        </ul>
    </div>
</div>
<div class="modal-body py-4">
    <div class="row">

        <!--Clientes-->
        <div class="col-xl-4 col-md-6">
            <div class="card mb-4">
                <div class="card-body text-center">
                    <i class="fas fa-user-friends display-4 text-info"></i>
                    <h4 class="mt-4"><span class="text-info">@Model.Clientes</span> Clientes</h4>
                    <p class="mb-3">Catálogos de clientes</p>
                    <a asp-action="Index" asp-controller="Clientes" class="badge badge-info badge-pill px-3 py-2">ir a la página</a>
                </div>
            </div>
        </div>

        <!--Colaboradores-->
        <div class="col-xl-4 col-md-6">
            <div class="card mb-4">
                <div class="card-body text-center">
                    <i class="fas fa-users-cog display-4 text-base"></i>
                    <h4 class="mt-4"><span class="text-base">@Model.Colaboradores</span> Colaboradores</h4>
                    <p class="mb-3">Catálogo de colaboradores</p>
                    <a asp-action="Index" asp-controller="Colaboradores" class="badge badge-base badge-pill px-3 py-2">ir a la página</a>
                </div>
            </div>
        </div>

        <!--Proveedores-->
        <div class="col-xl-4 col-md-6">
            <div class="card mb-4">
                <div class="card-body text-center">
                    <i class="fas fa-people-carry display-4 text-success"></i>
                    <h4 class="mt-4"><span class="text-success">@Model.Proveedores</span> Proveedores</h4>
                    <p class="mb-3">Catálogo de productos</p>
                    <a asp-action="Index" asp-controller="Proveedores" class="badge badge-success badge-pill px-3 py-2">ir a la página</a>
                </div>
            </div>
        </div>
    </div>
</div>