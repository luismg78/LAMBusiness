@model LAMBusiness.Shared.Dashboard.Catalogo

@{
    ViewData["Title"] = "Catálogo";
}

<div class="pb-0">
    <div>
        <h3 class="modal-title" id="exampleModalLabel">Catálogos</h3>
        <ul class="breadcrumb bg-transparent p-0 small">
            <li class="breadcrumb-item">Menú</li>
            <li class="breadcrumb-item active">Catálogo</li>
        </ul>
    </div>
    <!--Cambiar link-->
    @*<a asp-action="Index" asp-controller="Catalogo" class="close"><span>&times;</span></a>*@
</div>
<div class="modal-body py-4">
    <div class="row">

        <!--Géneros-->
        <div class="btn-lam col-xl-4 col-md-6">
            <a asp-action="Index" asp-controller="Generos" class="text-decoration-none">
                <div class="card mb-4 text-dark">
                    <div class="card-body bg-card text-center py-5">
                        <i class="fas fa-restroom display-4 text-base"></i>
                        <h4 class="mt-4"><span class="text-base">@Model.Generos</span> Géneros</h4>
                        <p class="mb-3">Solo se permiten ediciones</p>
                    </div>
                </div>
            </a>
        </div>

        <!--Estados Civiles-->
        <div class="btn-lam col-xl-4 col-md-6">
            <a asp-action="Index" asp-controller="EstadosCiviles" class="text-decoration-none">
                <div class="card mb-4 text-dark">
                    <div class="card-body bg-card text-center py-5">
                            <i class="fas fa-ring display-4 text-secondary"></i>
                            <h4 class="mt-4"><span class="text-secondary">@Model.EstadosCiviles</span> Estado Civiles</h4>
                            <p class="mb-3">Solo se permite visualizar</p>
                    </div>
                </div>
            </a>
        </div>

        <!--Estados-->
        <div class="btn-lam col-xl-4 col-md-6">
            <a asp-action="Index" asp-controller="Estados" class="text-decoration-none">
                <div class="card mb-4 text-dark">
                    <div class="card-body bg-card text-center py-5">
                        <i class="fas fa-globe-americas display-4 text-primary"></i>
                        <h4 class="mt-4"><span class="text-primary">@Model.Estados</span> Estados</h4>
                        <p class="mb-3">Solo se permiten ediciones</p>
                    </div>
                </div>
            </a>
        </div>

        <!--Municipios-->
        <div class="btn-lam col-xl-4 col-md-6">
            <a asp-action="Index" asp-controller="Municipios" class="text-decoration-none">
                <div class="card mb-4 text-dark">
                    <div class="card-body bg-card text-center py-5">
                        <i class="fas fa-globe-americas display-4 text-info"></i>
                        <h4 class="mt-4"><span class="text-info">@Model.Municipios</span> Municipios</h4>
                        <p class="mb-3">Solo se permiten ediciones</p>
                    </div>
                </div>
            </a>
        </div>

        <!--Productos-->
        <div class="btn-lam col-xl-4 col-md-6">
            <a asp-action="Index" asp-controller="Productos" class="text-decoration-none">
                <div class="card mb-4 text-dark">
                    <div class="card-body bg-card text-center py-5">
                        <i class="fab fa-product-hunt display-4 text-success"></i>
                        <h4 class="mt-4"><span class="text-success">@Model.Productos</span> Productos</h4>
                        <p class="mb-3">Catálogo de productos</p>
                    </div>
                </div>
            </a>
        </div>

        <!--Puestos-->
        <div class="btn-lam col-xl-4 col-md-6">
            <a asp-action="Index" asp-controller="Puestos" class="text-decoration-none">
                <div class="card mb-4 text-dark">
                    <div class="card-body bg-card text-center py-5">
                        <i class="fas fa-user-cog display-4 text-warning"></i>
                        <h4 class="mt-4"><span class="text-warning">@Model.Puestos</span> Puestos</h4>
                        <p class="mb-3">Puestos de los colaboradores</p>
                    </div>
                </div>
            </a>
        </div>

        <!--Tasas de Impuestos-->
        <div class="btn-lam col-xl-4 col-md-6">
            <a asp-action="Index" asp-controller="TasasImpuestos" class="text-decoration-none">
                <div class="card mb-4 text-dark">
                    <div class="card-body bg-card text-center py-5">
                        <i class="fas fa-percentage display-4 text-base"></i>
                        <h4 class="mt-4"><span class="text-base">@Model.TasasImpuestos</span> Tasas de Impuestos</h4>
                        <p class="mb-3">Aplica solo en el país de origen</p>
                    </div>
                </div>
            </a>
        </div>

        <!--Unidades-->
        <div class="btn-lam col-xl-4 col-md-6">
            <a asp-action="Index" asp-controller="Unidades" class="text-decoration-none">
                <div class="card mb-4 text-dark">
                    <div class="card-body bg-card text-center py-5">
                        <i class="fab fa-uniregistry display-4 text-secondary"></i>
                        <h4 class="mt-4"><span class="text-secondary">@Model.Unidades</span> Unidades</h4>
                        <p class="mb-3">Solo se permite visualizar</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>