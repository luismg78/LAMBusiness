<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LAMBusiness</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/helper.css" rel="stylesheet" />
    <link href="~/css/fontAwesome.css" rel="stylesheet" />
</head>
<body>
    @{
        string menu = "";
        if (TempData.ContainsKey("menu") == true)
        {
            menu = TempData["menu"].ToString().ToLower();
        }
    }
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand text-base" asp-area="" asp-controller="Home" asp-action="Index">LAMBusiness</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @*<div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link @if (menu == "home") {<text>font-weight-bold text-base</text>} else {<text>text-dark</text>} "
                               asp-area="" asp-controller="Menu" asp-action="Inicio">Inicio</a>
                        </li>
                    </ul>
                </div>*@
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1 justify-content-end">
                        <li class="nav-item float-right">
                            <a class="nav-link font-weight-bold text-uppercase @if (menu == "signin") {<text>text-base</text>} else {<text>text-primary</text>} "
                               asp-area="" asp-controller="Menu" asp-action="Inicio">Inicio de Sesión</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!--loader-->
    <div id="loader" class="d-none">
        <input type="text" id="inputDisabled" class="d-none" />
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            LAMBusiness &copy; 2020 - <a asp-area="" asp-controller="Menu" asp-action="inicio">Inicio de Sesión</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
