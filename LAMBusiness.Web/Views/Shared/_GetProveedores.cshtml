@model IEnumerable<LAMBusiness.Shared.Contacto.Proveedor>

@if (Model.Any())
{
    <div>
        <ul class="list-group">
            @foreach (var item in Model.OrderBy(p => p.Nombre))
            {
                <li class="list-group-item list-group-item-action" 
                    data-id="@item.ProveedorID" 
                    data-rfc="@item.RFC"
                    data-nombre="@item.Nombre"
                    onclick="addProveedor(event);">
                    <span class="d-block">@item.Nombre</span>
                    <small class="text-muted">@item.RFC</small>
                </li>
            }
        </ul>
    </div>
}