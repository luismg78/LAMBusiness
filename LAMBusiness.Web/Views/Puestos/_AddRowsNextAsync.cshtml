@model IEnumerable<LAMBusiness.Shared.Catalogo.Puesto>

@if (Model.Any())
{
    foreach (var item in Model)
    {
        <div class="border-bottom col-7 col-md-9 px-3 py-2 text-truncate">
            <span class="text-dark">@Html.DisplayFor(modelItem => item.PuestoNombre)</span>
            <small class="d-block d-md-inline-block text-muted">Colaboradores: @Html.DisplayFor(modelItem => item.Colaboradores.Count)</small>
            <small class="d-block text-muted">@Html.DisplayFor(modelItem => item.PuestoDescripcion)</small>
        </div>
        <div class="border-bottom col-5 col-md-3 px-3 py-2 text-right">
            <a asp-action="Details" asp-route-id="@item.PuestoID" class="btn-icon rounded-circle" data-toggle="tooltip" data-trigger="hover" data-placement="bottom" data-original-title="ver detalle"><i class="fa fa-file-alt"></i></a>
            <a asp-action="Edit" asp-route-id="@item.PuestoID" class="btn-icon text-primary rounded-circle" data-toggle="tooltip" data-trigger="hover" data-placement="bottom" data-original-title="editar registro"><i class="fa fa-edit"></i></a>
            <a asp-action="Delete" asp-route-id="@item.PuestoID" class="btn-icon text-danger rounded-circle" data-toggle="tooltip" data-trigger="hover" data-placement="bottom" data-original-title="eliminar registro"><i class="fa fa-trash"></i></a>
        </div>
    }
}
