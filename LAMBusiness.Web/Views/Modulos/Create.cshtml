@model LAMBusiness.Web.Models.ViewModels.ModuloViewModel

@{
    ViewData["Title"] = "Módulos";
}

<form asp-action="Create">
    <div class="modal-content border-0 box-shadow box-responsive m-auto">
        <div class="modal-header pb-0 align-items-baseline">
            <div>
                <h3 class="modal-title" id="exampleModalLabel">Módulos</h3>
                <ul class="breadcrumb bg-transparent p-0 small">
                    <li class="breadcrumb-item"><a asp-action="Aplicacion" asp-controller="Home">Aplicaciones</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Modulos">Modulos</a></li>
                    <li class="breadcrumb-item active">Nuevo Registro</li>
                </ul>
            </div>
            <a asp-action="Index" asp-controller="Modulos" class="btn-close me-md-1" aria-label="Close"></a>
        </div>
        <div class="modal-body py-4">
            <div class="row px-md-3">
                <!--Descripción-->
                <div class="col-12">
                    <div class="form-group">
                        <label asp-for="Descripcion" class="control-label"></label>
                        <input asp-for="Descripcion" class="form-control" autofocus />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                </div>
                <!--Módulos (padre)-->
                <div class="col-12">
                    <div class="form-group">
                        <label asp-for="ModuloPadreID" class="control-label"></label>
                        <select asp-for="ModuloPadreID" class="form-select" asp-items="Model.ModulosPadresDDL"></select>
                        <span asp-validation-for="ModuloPadreID" class="text-danger"></span>
                    </div>
                </div>
                <!--Activo-->
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Activo" class="control-label"></label>
                        <input class="d-block" asp-for="Activo" />
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer justify-content-between">
            <div class="px-md-3">
                <input type="submit" value="Guardar" class="btn btn-base" />
                <a asp-action="Index" class="btn btn-outline-secondary">Regresar</a>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>
    </div>
</form>